//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="#{data.baseUrl}#{post.url}")
        h1.post-title= post.title
    - if (post.type && post.type === 'project') {
      div.post-date= post.quarter
    - }
    - else {
      div.post-date!= 'Published ' + post.date.toLocaleDateString().split(',').slice(1).join(',')
    - } 
    

mixin post(post)
  mixin postHead(post)
  .post-body.markdown!= post.content

